<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Facelift Full Suite" verbose="1" parallel="false">

    <!-- Smoke suite -->
    <test name="Smoke Suite">
        <groups>
            <run>
                <include name="Smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.solarsoft.facelift.tests.LoginTests"/>
            <class name="com.solarsoft.facelift.tests.DashboardCardTests"/>
            <class name="com.solarsoft.facelift.tests.GlobalSearchTests"/>
            <class name="com.solarsoft.facelift.tests.DealerTests"/>
        </classes>
    </test>

    <!-- Regression suite -->
    <test name="Regression Suite">
        <groups>
            <run>
                <include name="Regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.solarsoft.facelift.tests.LoginTests"/>
            <class name="com.solarsoft.facelift.tests.DashboardCardTests"/>
            <class name="com.solarsoft.facelift.tests.ProposalListTests"/>
            <class name="com.solarsoft.facelift.tests.ActionMenuTests"/>
            <class name="com.solarsoft.facelift.tests.GlobalSearchTests"/>
            <class name="com.solarsoft.facelift.tests.DealerTests"/>
        </classes>
    </test>

</suite>
